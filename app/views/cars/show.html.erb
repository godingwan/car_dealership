<%= image_tag @car.image_url.to_s %></br>
<%= "Year: " + @car.year.to_s %>
<%= "Model: " + @car.model %>
<%= "Make: " + @car.make %>
<%= "List Price: " + @car.list_price.to_s %>

<%- if user_signed_in? %>
  <%- if current_user.cars.include?(@car) %>
    <%= link_to "Change car status", edit_car_path(@car) %>
  <%- end %>
<%- end %>
